<h1>Customer Update</h1>
<form method="POST" action="/animal-shelter/customer/<%=@customer.id%>/customer-updated">

  <label for="first-name-field">First Name:</label>
  <input type="text" name="first_name" id="first-name-field" value="<%= @customer.first_name %>"/>

  <label for="last-name-field">Second Name:</label>
  <input type="text" name="last_name" id="last-name-field" value="<%= @customer.last_name %>"/>

  <label for="appointment">Species:</label>
  <input type="text" name="appointment" id="appointment-field" value="<%= @customer.appointment %>" />

    <label for ="Requirements"> Please add any requirements:</label>
    <input type ="text" name ="requirements" id="requirements-field" value ="<%= @customer.requirements %>"/>
    <input type="submit" name="" value="Update Customer">

</form>
